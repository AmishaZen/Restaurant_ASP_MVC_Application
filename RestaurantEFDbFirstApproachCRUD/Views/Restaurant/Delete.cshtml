@model RestaurantEFDbFirstApproachCRUD.Models.Restaurant
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<form action="/Restaurant/Delete/@Model.RestaurantId" method="post">
    <div class="form-row">
        <div class="form-group col-md-10">
            <input type="hidden" name="RestaurantId" value="@Model.RestaurantId" />
            <label for="RestaurantName">Restaurant Name</label>
            @Model.RestaurantName
        </div><br />
        <div class="form-group col-md-10">
            <label for="Cusine">Cusine</label>
            @Model.Cusine
        </div>
        <div class="form-group col-md-6">
           <br /> <button type="submit" class="btn btn-danger">Delete Restaurant</button>
            <a class="btn btn-info" href="/Restaurant/Index">Cancel</a>
        </div><br />
    </div>
   
</form>
