            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    @*@Html.ActionLink("Meet my Restaurant", "Index", "Restaurant")*@
                    <li>@Html.ActionLink("My Restaurant", "Image", "Restaurant")</li>
                    <li>@Html.ActionLink("Restaurant Detail", "Index", "Restaurant")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @*<img src="~/Images/dalBati.jpg"/>*@
        @RenderBody()
        <hr />
        <footer class="navbar-fixed-bottom navbar-inverse">
            <p style="font-weight:bold; color:burlywood; font-size:20px;">&copy; @DateTime.Now.Year - My Restaurant</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
